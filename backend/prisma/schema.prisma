generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
   url = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  name      String
  blood     String
  phone     String
  role      Role     @default(EMERGENCY)
  qr        QR?      @relation("UserQR") // One-to-one QR
  createdAt DateTime @default(now())

  @@map("users") // Optional: table name
}

model QR {
  id         Int      @id @default(autoincrement())
  qrCodeId   String   @unique
  encrypted  String   @db.Text     // Use Text for large encrypted payload
  hash       String   @db.Text     // Optional, but safer as Text
  expiresAt  DateTime
  userId     Int      @unique
  user       User     @relation("UserQR", fields: [userId], references: [id])
  createdAt  DateTime @default(now())

  @@map("qrs")
}


enum Role {
  EMERGENCY
  FULL
}